generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}

model Poster {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  size        String
  image       String
  createdAt   DateTime @default(now())
}
